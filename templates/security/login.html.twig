{% extends 'base.html.twig' %}

{% block title %}Ierakstīties!{% endblock %}

{% block content %}
    <form method="post">
        <h1 class="h3 mb-3 font-weight-normal">Ierakstīties</h1>
        <label for="username">E-pasts</label>
        <input
            type="email"
            value="{{ last_username }}"
            name="_username"
            id="username"
            class="form-control"
            autocomplete="email"
            required
            autofocus
        >
        <label for="password">Parole</label>
        <input
            type="password"
            name="_password"
            id="password"
            class="form-control"
            autocomplete="current-password"
            required
        >
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <button class="btn btn-lg btn-primary" type="submit">
            Ierakstīties
        </button>
    </form>
{% endblock %}
